{
	"extends": [
		"plugin:flowtype/recommended",
		"standard"
	],
	"parser": "babel-eslint",
	"plugins": ["babel", "flowtype"],
	"parserOptions": {
		"ecmaFeatures": {
			"modules": true
		}
	},
	"env": {
		"browser": true,
		"amd": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"no-tabs": 0,
		"indent": [2, "tab"]
	}
}
